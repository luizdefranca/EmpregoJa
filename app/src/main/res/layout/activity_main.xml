<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mafiagames.empregoja.MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/labelCidade"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="@string/label_cidade" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07">

        <EditText
            android:hint="@string/cidadeHint"
            android:id="@+id/cidade"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cidade"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="5dp"
            android:src="@drawable/btn_emprego_ja"
            android:id="@+id/btnLocalizarCidade"
            android:background="@null"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07">

        <TextView
            android:text="@string/label_tipo_vaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/labelTipoVaga"
            android:layout_weight="0.07"
            android:textAlignment="center"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/tipoVaga"
            android:layout_weight="0.07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hintTipoVaga" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="@string/button_list"
        android:textColor="@color/colorText"
        android:background="@color/colorPrimary"
        android:clickable="false"
        android:id="@+id/btnListarVagas" />


</LinearLayout>
